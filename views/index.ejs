<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container parchment">
      <h1><%= title %></h1>

      <p><a href="/new" class="nav-button">[+] Post a New Message</a></p>

      <ul class="messages-list">
        <% messages.forEach((message, index) => { %>
        <li class="message-item">
          <div class="message-author">~ <%= message.user %></div>
          <div class="message-text"><%= message.text %></div>
          <div class="message-date">
            Posted: <%= message.added.toLocaleString() %>
          </div>
          <a href="/message/<%= index %>" class="message-link">View Message</a>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
