<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>

    <p><a href="/new">â• Add a New Message</a></p>

    <ul>
      <% messages.forEach((message, index) => { %>
      <li>
        <strong><%= message.user %></strong>: <%= message.text %><br />
        <small><%= message.added.toLocaleString() %></small><br />
        <a href="/message/<%= index %>">Open</a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
